ak = {
	DONT_DO_THREAD_LOOPS_FOR_DEBUG = false,
	IS_LOCAL_DEBUG                 = false,
	project                        = nil,
}

function ak:button(x1, y1, x2, y2)
	local box = {}
	box[1] = x1
	box[2] = y1
	box[3] = x2
	box[4] = y2
	for i=1,4 do
		if box[i] == nil then
			error("called button() with nil argument")
		end
	end

	function pressed(clickX, clickY)
		if (clickX >= x1 and clickX <= x2) and (clickY >= y1 and clickY <= y2) then
			return true
		end
		return false
	end

	box.pressed = pressed
	return box
end


math.round = function(x) return x + 0.5 - (x + 0.5) % 1 end
function ak:shuffle(tbl)
  for i = #tbl, 2, -1 do
    local j = math.random(i)
    tbl[i], tbl[j] = tbl[j], tbl[i]
  end
  return tbl
end

function ak:bool_str(bool)
    if bool then return "true" else return "false" end
end

function ak:debug(...)
    if not IS_LOCAL_DEBUG then
        return false
    end
    write("[Debug]")
    for i,v in ipairs(arg) do
        write(" ")
        write(v)
    end
    write("\n")
end

function ak:split(str, sep)
    if sep == nil then
	sep = "%s"
    end
    local t = {}
    for str in string.gmatch(str, "([^"..sep.."]+)") do
	table.insert(t, str)
    end
    return t
end

function ak:file(name)
	if ak.project == nil then 
		error("ak:file() called with ak.project being nil.")
		return nil 
	end
	return "ccrepo/"..ak.project.."/"..name
end

function ak:lib(name)
	return "ccrepo/lib/"..name
end
